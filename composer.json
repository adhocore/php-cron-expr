{
    "name": "adhocore/cron-expr",
    "description": "Ultra lightweight Cron Expression parser for PHP",
    "type": "library",
    "keywords": [
        "cron", "cron-expression", "cron-parser", "cron-expr"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jitendra Adhikari",
            "email": "jiten.adhikary@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Ahc\\Cron\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ahc\\Cron\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5 || ^7.5"
    },
    "scripts": {
        "test": "phpunit",
        "test:cov": "phpunit --coverage-text --coverage-clover coverage.xml --coverage-html vendor/cov"
    }
}
